/* 底部的上下架按钮 */
.upordown{
  /* position: fixed; */
  position: absolute;
  bottom: 3px;
  left: 0;
  height: 100rpx;
  width: 100%;
  z-index: 7;
  background:#fff;
  padding-top:6rpx;
  box-sizing: border-box;
}
.upordown .btn{
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  /* background-color: rgba(242, 131, 0, 1); */
  background-color: #eea151;
  box-shadow: 0 0px 10px rgba(0,0,0,0.2);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin:0 auto;
}
.upordown .btndown{
  /* background-color:rgba(55, 134, 235, 1); */
  background-color:var(--theme-color);
}
.readmore{
  max-height:6em;
  display: -webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
  overflow: hidden; 
}
page button[type=primary]{
  /* background-image: linear-gradient(#8b8cff,var(--theme-color)); */
  background-color: var(--theme-color);
  border-radius: 40rpx;
  font-size: 34rpx;
  /* margin-top: 60rpx; */
}
page button[type=primary][plain]{
  background-color: transparent;
  background-image: none;
  border: solid 1px var(--theme-color);
  color: var(--theme-color);
}
page button:not([size=mini]){
  width: 100%
}
