/* pages/importPage/index.wxss */
.import_page_section checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
}
.import_page_select{
  /* margin-bottom: 30rpx; */
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color:#666;
  height: 117rpx;
  align-items: center;
  background:#fff;
  margin:0 -20rpx;
  padding:0 30rpx;
}
.import_card_list{
  /* width: 50%; */
  display: flex;
  flex-wrap: wrap;
}
.import_card_li{
  width: calc(50% - 20rpx);
  margin: 0 10rpx 20rpx;
}
.import_card_li.active .import_cardli_con{
  background-color: var(--theme-color);
}
.import_card_img{
  height: 0;
  padding-top: 138%;
  position: relative;
  margin-bottom: 16rpx;
}
.import_card_img image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.import_cardli_con{
  padding: 30rpx;
  /* box-shadow: 0 0 20rpx #cad4fd; */
  box-shadow: 0px 0px 10px #e7e7e7;
  background-color: #fff;
  border-radius: 14rpx;
}
.import_card_infor{
  text-align: center;
}
.import_card_name{
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size:31rpx;
  color:#333;
  font-weight: bold;
}
.import_card_infor .card_li_tag{
  /* justify-content: space-between; */
  justify-content: center;
  /* gap: 10rpx; */
  flex-wrap: no-wrap;
  overflow: hidden;
}
.card_list_scroll{
  margin:20rpx 0;
  /* height:calc(100vh - 196rpx); */
  /* height: calc(100vh - 100rpx - 80rpx - 140rpx - 16rpx); */
  height: calc(100vh - 142rpx - 117rpx - 140rpx - 20rpx);
  /* border-top: 1px solid rgba(103,103,103,0.1); */
}
.page_app.active{
  background-color: var(--theme-color);
  color: #ffffff;
}

.import_page_section .import_button{
  position: fixed;
  /* bottom: 58px; */
  bottom: 152rpx;
  left: 32rpx;
  right: 32rpx;
  width: auto !important;
}
.screen_btn{
  display: flex;
  align-items: center;
  margin-left:26rpx;
}
.daoru{
  display: block;
  width:132rpx;
  height:69rpx;
  line-height:69rpx;
  text-align: center;
  background-color: var(--theme-color);
  border-radius: 35rpx;
  color:#000;
}