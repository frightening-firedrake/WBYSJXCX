.order_li_con{
  background-color: #ffffff;
  box-shadow: 0px 0px 10px #e7e7e7;
  border-radius: 6px;
  margin-bottom: 20rpx;
  position: relative;
}
.order_li_con .arrow{
  position: absolute;
  right:30rpx;
  top:50%;
  transform: translateY(-50%);
}
.order_li_bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: solid 1px #f1f1f1;
  padding: 16rpx 30rpx;
}
.order_li_num{
  font-size: 28rpx;
  width: 18em;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order_li_state{
  font-size: 24rpx;
  color: #999999;
}
.order_li_infor{
  padding: 20rpx;
  display: flex;
}
.order_infor_ba{
  display: flex;
  flex-direction: column;
}
.order_infor_store,.order_infor_time{
  font-size: 24rpx;
  color: #333333;
}
.store_icon{
  font-size: 14px;
  color: var(--theme-color);
  margin-right: 10rpx;
}
.order_infor_con{
  /* display: flex;
  justify-content: space-between; */
  position: relative;
}
.order_infor_list{
  /* margin-right: 20rpx;
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap; */
  display: flex;
  flex-direction: column;
}
.order_infor_list .order_infor_li{
  display: flex;
  font-size: 24rpx;
  color: #333333;
  /* width: 50%; */
}
.order_infor_li{
  padding-right: 24rpx;
  box-sizing: border-box;
  line-height: 60rpx;
}
.order_infor_li:nth-child(2n){
  margin-right: 0;
}
.order_infor_label{
  color: #999999;
}
.order_price{
  position: absolute;
  font-size: 24rpx;
  color: #ff4e4e;
  right: 0;
  bottom: 0;
  line-height: 60rpx;
}
