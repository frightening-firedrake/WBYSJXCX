.order_li_infor .detail_con_img{
  width:160rpx;
  height:200rpx;
  border-radius: 6px;
  background:hotpink;
  margin-right:20rpx;
}
.order_li_infor .info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.order_li_infor .info .title{
  color:#333;
  font-size:31rpx;
  font-weight: bold;
}
.order_li_infor .info .tags{
  display: flex;
  color:#9FA1B7;
  font-size:24rpx;
}
.order_li_infor .info .tags .tag{
  padding:0 22rpx;
  border-radius: 22rpx;
  background:#FFEDC2;
  margin-right:20rpx;
  height:44rpx;
  line-height:44rpx;
  font-size:25rpx;
  color:#333;
}
.order_li_infor .info .room{
  color:#5C6075;
  font-size:28rpx;
}