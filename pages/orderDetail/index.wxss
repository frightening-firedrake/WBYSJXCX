.detail_dm_li{
  font-size: 28rpx;
  color:#666;
  line-height:80rpx;
  padding:0 46rpx;
}

.dialogcontent{
  text-align: left;
}
.dialogcontent .tip{
  text-align: center;
  padding:20rpx 10rpx 0 10rpx;
  font-size:30rpx;
}
.dialogcontent .reasonLabel{
  font-size:24rpx;
  color:#757575;
  margin:30rpx 0;
}
.dialogcontent textarea{
  border:1px solid rgba(196, 196, 196, 1);
  width:auto;
  font-size:26rpx;
  padding:10rpx;
}
.weui-dialog__bd{
  margin-bottom:32rpx;
}

.row{
  padding:0 46rpx;
  font-size:28rpx;
  color:#666;
  display: flex;
  height:46rpx;
}
.lastrow{
  margin-bottom:10rpx;
}
.row .label{
  font-size:28rpx;
  color:#666;
  width:4em;
  text-align: justify;
  text-align-last: justify;
  padding-right:1em;
  position: relative;
}
.row .label::after{
  content: 'ï¼š';
  position: absolute;
}
.row .value{
  font-size:28rpx;
  color:#333;
  width:calc(100% - 5em);
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bold;
  overflow: hidden;
}