}
.detail_content_tit{
  /* font-size: 14px; */
  padding: 0 46rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 33rpx;
  font-weight: bold;
}
.detail_tip{
  font-size: 28rpx;
  padding: 16rpx 20rpx;
  border-bottom: solid 1px #f1f1f1;
  margin-bottom: 24rpx;
}
.detail_content{
  display: flex;
  padding: 16rpx 20rpx;
}
.detail_con_img{
  width: 100rpx;
  height: 140rpx;
  margin-right: 24rpx;
}
.detail_con_fr{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.detail_con_name{
  display: flex;
  justify-content: space-between;
}
.detail_name{
  font-size: 28rpx;
}
.detail_price{
  font-size: 24rpx;
  color: #ff4e4e;
}
.detail_con_infor{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:10rpx -15rpx;
}
.detail_infor_fl{
  display: flex;
  flex-wrap: wrap;
}
.detail_infor_text{
  font-size: 24rpx;
  color: #757575;
  line-height: 30rpx;
  padding:0 15rpx;
}
.detail_infor_text+.detail_infor_text{
  border-left:1px solid #757575;
}
.detail_infor_p{
  width: 100%;
}
.detail_content_bot{
  display: flex;
  flex-wrap: wrap;
  font-size: 24rpx;
  line-height: 50rpx;
  color: #757575;
}
.detail_content_text{
  /* margin-right: 30rpx; */
  min-width: 50%;
}
.detail_content_text text{
  color: #333333;
}
.text_icon{
  font-size: 16px;
  margin-right: 5px;
  color: var(--theme-color);
}
.order_list{
  display: block;
}
.detail_li{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  line-height: 46rpx;
  color:#666;
}
.detail_li_fl{
  color: #666;
}
.detail_li_fr{
  color: #333333;
  font-weight: bold;
}
.price_num{
  color: #F53A3A;
}
.detail_price_li{
  padding: 16rpx 20rpx;
}
.bgicon{
  font-weight: bold;
