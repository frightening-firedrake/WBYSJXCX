.script_detail_tip{
  /* box-shadow: 0 0 -10px rgba(0, 0, 0, 0.3); */
  border-radius: 12rpx;
  background-color: #ffffff;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
  color: #ff4e4e;
}
.detail_content_li{
  background-color: #ffffff;
  /* border-radius: 12rpx; */
  margin-bottom: 15rpx;
  /* border-radius: 12rpx; */
  /* box-shadow: 0 0 10px #e7e7e7; */
