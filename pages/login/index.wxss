/* pages/login/index.js.wxss */
.login_logo{
  text-align: center;
  padding: 120rpx 0;
}
.logo_img{
  width: 127rpx;
}
.login_section{
  padding: 0 76rpx;
  background:#fff;
  height:100vh;
}
.login_input{
  height: 80rpx;
  /* border-radius: 10rpx; */
  padding: 0 20rpx;
  font-size: 32rpx;
}

.login_input_li{
  position: relative;
  /* margin-bottom: 30rpx; */
}
.login_vcode_time{
  position: absolute;
  line-height: 80rpx;
  color: #666666;
  top: 0;
  right:20rpx;
}
.verification_code_btn{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 20rpx;
  z-index: 10;
}
.page_app button[size=mini].verification_code_btn{
  font-size: 25rpx;
  width:170rpx;
  height:50rpx;
  line-height:46rpx;
  border: 1px solid var(--theme-color);
  border-radius: 7rpx;
  color:#333;
}
.login_input_icon{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 10px;
}
.login_input_content{
  margin-bottom: 26rpx;
}
.weui-cell::before{
  opacity: 0;
}
.btn_content{
  font-size: 32rpx;
}
.login_checkbox view{
  vertical-align: middle;
  display: inline-block;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #666666;
}
.login_checkbox{
  display: block;
}
.login_checkbox_box{
  display: flex;
  font-size: 24rpx;
  align-items: center;
  margin-bottom: 100rpx;
}
navigator{
  color: var(--theme-color);
}
.login_section .weui-cell{
  padding: 8px 0;
  border-bottom: solid 1px #e9e9e9;
}

.login_section .weui-form{
  padding: 0;
}
.login_section .weui-form__control-area{
  margin: 0;
}
.login_section .weui-cells::after,.login_section .weui-cells::before{
  display: none;
}
.login_section .weui-cells__group_form .weui-cell__hd,.login_section .weui-cells__group_form .weui-cell__ft{
  padding: 0;
}
.login_section  button[type=primary].loginPage{
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 400;
}